@model IEnumerable<MagicVilla_Web.Models.ViewModels.villaNumberViewModels.VillaNumberViewModel>
<br />
<div class="container p-4 border">
    <div class=" row p-2">
        <div class=" col">
            <h1 class="text-primary"> Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-Controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-file-plus-fill"></i> Create New Villa Number </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>

                <th>
                    Villa Number
                </th>
            </tr>
        </thead>
        <thead>

            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Villa.Name</td>
                    <td>@villa.VillaNumber</td>
                    <td>
                        <a asp-Controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-Id="@villa.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-Controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-Id="@villa.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }

        </thead>
    </table>
</div>
